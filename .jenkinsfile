pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Maven Install') {
            	agent {
              	docker {
                	image 'maven:3.5.0'
                }
              }

        stage('Build Maven Project') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t my-app .'
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: '2051082e-7953-489f-a3dc-ad1c88ea859f', usernameVariable: 'gatinoko', passwordVariable: 'KJJJ#Y+5=tbdC5S__U4ZRHABXw')]) {
                    sh "docker login -u $DOCKER_USER -p $DOCKER_PASS"
                }
            }
        }

        stage('Docker Push') {
            steps {
                sh 'docker push my-app'
            }
        }
    }
}
